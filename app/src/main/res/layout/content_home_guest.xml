<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeUtils.HomeGuest"
    tools:showIn="@layout/app_bar_home_guest">
    <RelativeLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/imgHeader"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher_foreground"/>

        <TextView
            android:id="@+id/txtHeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_below="@+id/imgHeader"
            style="@style/TextAppearance.MyApp.Body1"
            android:text="You can browse, search and locate\ndocuments or validate them"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/crd1"
            android:layout_below="@+id/txtHeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:layout_marginTop="56dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/crd1_img"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:scaleType="centerCrop"
                    android:padding="10dp"
                    android:layout_margin="20dp"
                    android:tint="@color/my_app_surface_color"
                    android:background="@drawable/circular_drawable"
                    android:src="@drawable/ic_outline_camera_24px"/>

                <LinearLayout
                    android:layout_toRightOf="@+id/crd1_img"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginEnd="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Browse Documents"
                        style="@style/TextAppearance.MyApp.Subtitle1"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Browse from the list of documents"
                        style="@style/TextAppearance.MyApp.Subtitle2"/>
                </LinearLayout>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/crd2"
            android:layout_below="@+id/crd1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/crd2_img"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:scaleType="centerCrop"
                    android:padding="10dp"
                    android:layout_margin="20dp"
                    android:tint="@color/my_app_surface_color"
                    android:background="@drawable/circular_drawable"
                    android:src="@drawable/ic_outline_playlist_add_check_24px"/>

                <LinearLayout
                    android:layout_toRightOf="@+id/crd2_img"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginEnd="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Search"
                        style="@style/TextAppearance.MyApp.Subtitle1"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Search for documents that contains the keyword"
                        style="@style/TextAppearance.MyApp.Subtitle2"/>
                </LinearLayout>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/crd3"
            android:layout_below="@+id/crd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/crd3_img"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:scaleType="centerCrop"
                    android:padding="10dp"
                    android:layout_margin="20dp"
                    android:tint="@color/my_app_surface_color"
                    android:background="@drawable/circular_drawable"
                    android:src="@drawable/ic_outline_playlist_add_check_24px"/>

                <LinearLayout
                    android:layout_toRightOf="@+id/crd3_img"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginEnd="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recent Validations"
                        style="@style/TextAppearance.MyApp.Subtitle1"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View recent comments/validations from various documents"
                        style="@style/TextAppearance.MyApp.Subtitle2"/>
                </LinearLayout>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
</RelativeLayout>